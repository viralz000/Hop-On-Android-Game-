<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgoflevel">
    
    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/marikina"
        android:id="@+id/marikinacity"/>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="105dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/level1"
        android:id="@+id/level1"/>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="105dp"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@id/level1"
        android:id="@+id/level2"
        android:background="@drawable/level2"/>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="105dp"
        android:layout_marginLeft="75dp"
        android:layout_below="@+id/level1"
        android:background="@drawable/level3"
        android:id="@+id/level3"/>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="105dp"
        android:layout_toRightOf="@id/level3"
        android:layout_below="@id/level2"
        android:background="@drawable/level4"
        android:id="@+id/level4"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="225dp"
        android:background="@drawable/nextbutton"
        android:id="@+id/nextbutton1"/>

    <ImageButton
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/oneof4"
        android:id="@+id/oneof4"/>

</RelativeLayout>